{
  "compilerOptions": {
    "allowJs": true,
    "allowUmdGlobalAccess": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@modelberry/*": ["node_modules/@modelberry/*"]
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/*.js",
    "**/build/**",
    "**/__fixtures__/**"
  ]
}
